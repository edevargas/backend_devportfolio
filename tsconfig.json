{
  "compilerOptions": {
    "module": "commonjs",
      "baseUrl": ".",
      "paths": {
          "@middlewares/*": ["src/middlewares/*"],
          "@models/*": ["src/models/*"],
          "@db/*": ["src/db/*"],
          "@app": ["src/index.ts"]
      },
      "target": "es6",
      "lib": ["es6"],
      "allowJs": false,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
